{
  "builders": [
    {
      "name": "author",
      "type": "amazon-ebs",
      "ssh_username": "{{user `aws_user`}}",
      "ami_description": "Packer AEM bootstrap AMI {{user `component`}}-{{user `author_ami_version`}}-{{timestamp}}",
      "ami_name": "{{user `component`}}-{{user `author_ami_version`}}-{{timestamp}}",
      "instance_type": "m4.large",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `author_ami_source_ami`}}",
      "tags": {
        "component": "{{user `component`}}",
        "version": "{{user `author_ami_version`}}",
        "Name": "AEM Author {{user `author_ami_version`}} AMI"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "conf/hieradata",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "test/serverspec",
      "destination": "/tmp"
    },
    {
      "type": "puppet-masterless",
      "manifest_file": "provisioners/puppet/manifests/{{user `component`}}.pp",
      "hiera_config_path": "conf/hiera.yaml",
      "module_paths": [
        "modules",
        "provisioners/puppet/modules"
      ],
      "puppet_bin_dir": "/opt/puppetlabs/bin"
    },
    {
      "type": "shell",
      "script": "provisioners/cleanup.sh"
    }
  ]
}
